<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.textbookapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/campus_launcher"
        android:label="@string/appName"
        android:roundIcon="@mipmap/campus_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity android:name=".activity.AddTextBookActivity"></activity>
        <activity android:name=".activity.OrderActivity" />
        <activity android:name=".activity.BalanceActivity" />
        <activity android:name=".activity.RepairActivity" />
        <activity android:name=".activity.RepairPwdActivity" />
        <activity android:name=".activity.RegisteredActivity" />
        <activity android:name=".activity.ForgetActivity" />
        <activity android:name=".activity.AboutActivity" />
        <activity android:name=".activity.AdminMainActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.DetailActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>